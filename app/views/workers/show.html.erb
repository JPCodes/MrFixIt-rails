<h1><%= @worker.email %>'s claimed jobs:</h1>

<ul id="inactive-jobs">
<% @jobs.each do |job| %>
  <% if !job.active_job? %>
  <li id="job_<%= job.id %>"><%= link_to job.title, job_path(job) %>
    <% if @worker.id == current_worker.id %>
     | <%= link_to 'Make this job active', worker_activate_job_path(@worker, job), remote: true  %>
    <% end %>
    </li>
  <% end %>
<% end %>
</ul>

<h1>Active Jobs:</h1>
<ul id="active-jobs">
<% @jobs.each do |job| %>
  <% if job.active_job? %>
  <li id="job_<%= job.id %>"><%= link_to job.title, job_path(job) %>
    <% if @worker.id == current_worker.id %>
     | <%= link_to 'Make this job inactive', worker_activate_job_path(@worker, job), remote: true  %>
    <% end %>
    </li>
  <% end %>
<% end %>
</ul>
